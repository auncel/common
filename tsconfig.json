{
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    // https://github.com/facebook/jest/issues/8218#issuecomment-486464992
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "outDir": ".",
    "baseUrl": ".",
    "incremental": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "logger/**/*.ts",
    "polyfill/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
